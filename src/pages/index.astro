---

// layouts

import Layout from '../layouts/Layout.astro';

// components

import AboutMe from '../components/AboutMe.astro';
import Badge from '../components/Badge.astro';
import Experience from '../components/Experience.astro';
import Footer from '../components/Footer.astro';
import Projects from '../components/Projects.astro';
import SocialPill from '../components/SocialPill.astro';
import SectionContainer from '../components/SectionContainer.astro';

// icons

import BriefcaseIcon from '../components/icons/Briefcase.astro';
import CodeIcon from '../components/icons/Code.astro';
import GitHubIcon from '../components/icons/GitHub.astro';
import MailIcon from '../components/icons/Mail.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro';
import User from '../components/icons/User.astro';

---

<Layout 
	title="Portfolio - Lautaro Palena"
	description="Lautaro Palena's Portfolio, a University student studying Programming and Web Development"
>
	<main>
		<SectionContainer class="pt-40 pb-28">
			<div class="flex flex-col lg:flex-row justify-between h-full"> 

				<!--	Left	 -->
				<div class="flex flex-col justify-between lg:items-start h-full lg:w-auto">
					
					<!--	Name	 -->

					<div class="flex justify-center items-center text-center lg:text-left">
						<h1 class="text-white text-4xl lg:text-5xl font-semibold lg:flex lg:items-center gap-y-4">
							Lautaro Palena 
							<a href="https://www.linkedin.com/in/lautaro-palena/" 
							target="_blank" rel="noopener noreferrer" class="lg:pb-2 lg:pl-4">
								<Badge>Available to work</Badge>
							</a>
						</h1>
					</div>

					<div class="flex flex-col items-center my-8 gap-y-3 lg:hidden">
						<img class="rounded-full size-52" src="https://avatars.githubusercontent.com/u/106833976?v=4" alt="Lautaro Palena photo" />
						<SocialPill href="./resume/CV-English.pdf" download="Palena Lautaro CV" target="_self">
							Download Resume
						</SocialPill>
					</div>

					<!--	Description	 -->

					<div class="lg:mt-12 lg:px-0 text-center text-balance lg:text-pretty lg:text-left">
						<h2 class="w-full lg:w-[497px] text-lg lg:text-2xl"> 
							<span class="opacity-80">Hi, I'm a University Student pursuing a </span>
							<span class="text-orange-400/90">Technical Degree in Programming</span>,
							<span class="opacity-80">actively looking for job opportunities. </span>
							<span class="text-blue-300/90">I'm based in Buenos Aires, Argentina</span>.
						</h2>
					</div>
					
					<!--	Social	 -->

					<div class="mt-4 lg:mt-12">
						<nav class="grid grid-cols-2 lg:flex justify-center gap-y-4 lg:gap-y-0 gap-x-2 lg:gap-x-4">
							<div class="col-span-1">
								<SocialPill href="https://www.linkedin.com/in/lautaro-palena">
									<LinkedInIcon class="size-6" />
									LinkedIn
								</SocialPill>
							</div>
							<div class="col-span-1">
								<SocialPill href="https://www.github.com/LautyPale">
									<GitHubIcon class="size-6" />
									GitHub
								</SocialPill>
							</div>
							<div class="col-span-2">
								<SocialPill href="mailto:palenalautaro@gmail.com">
									<MailIcon class="size-6" />
									palenalautaro@gmail.com
								</SocialPill>
							</div>
						</nav>
					</div>
				</div>

				<!--	Right	 -->

				<div class="lg:flex flex-col items-center lg:items-stretch justify-between gap-y-3 lg:ml-8 lg:w-auto lg:m-0 hidden">
					<img class="rounded-full size-64" src="https://avatars.githubusercontent.com/u/106833976?v=4" alt="Lautaro Palena photo" />
					<SocialPill href="./resume/CV-English.pdf" download="Palena Lautaro CV" target="_self">
						Download Resume
					</SocialPill>
				</div>

			</div>
		</SectionContainer>

		<SectionContainer  class="flex-col pb-28">
			<div id="projects" class="flex items-center mb-4 gap-x-2">
				<CodeIcon class="size-8 -ml-4" />
				<h2 class="text-3xl font-semibold">Projects</h2>
			</div>
			<Projects/>
		</SectionContainer>

		<SectionContainer class="flex-col pb-40 mx-8">
			<div id="experience" class="flex items-center mb-4 gap-x-2">
				<BriefcaseIcon class="size-8 -ml-4" />
				<h2 class="text-3xl font-semibold">Experience</h2>
			</div>
			<Experience/>
		</SectionContainer>

		<SectionContainer class="flex-col pb-40">
			<div id="aboutme" class="flex items-center justify-center lg:justify-normal mb-4 gap-x-2">
				<User class="size-8 -ml-4" />
				<h2 class="text-3xl font-semibold">About Me</h2>
			</div>
			<AboutMe />
		</SectionContainer>

		<SectionContainer >
			<div id="contact"> 
				<Footer />
			</div>
		</SectionContainer>
	</main>
</Layout>